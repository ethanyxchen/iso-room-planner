{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["react", "nextjs", "jsx-a11y", "react-perf", "import", "promise"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "perf": "warn"
  },
  "rules": {
    // React 19 with the new JSX transform doesn't need React in scope
    "react/react-in-jsx-scope": "off",
    // Inline handlers are fine in non-memoized components
    "react-perf/jsx-no-new-function-as-prop": "off",
    // Inline style objects are fine
    "react-perf/jsx-no-new-object-as-prop": "off",
    // CSS imports and side-effect imports are normal
    "import/no-unassigned-import": "off"
  },
  "settings": {
    "next": {
      "rootDir": ["."]
    },
    "react": {
      "formComponents": [],
      "linkComponents": [],
      "version": "19",
      "componentWrapperFunctions": []
    }
  },
  "ignorePatterns": ["packages/isometric-city"]
}
