{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["react", "nextjs", "jsx-a11y", "react-perf", "import", "promise"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "perf": "warn"
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "import/no-unassigned-import": "off"
  },
  "settings": {
    "next": {
      "rootDir": ["."]
    },
    "react": {
      "formComponents": [],
      "linkComponents": [],
      "version": "19",
      "componentWrapperFunctions": []
    }
  },
  "ignorePatterns": ["packages/isometric-city"]
}
